{
  "globals": {
    "ts-jest": {
      "tsConfig": "./tsconfig.json"
    }
  },
  "transform": {
    ".ts": "ts-jest"
  },
  "testEnvironment": "node",
  "testRegex": "(/__tests__/.*|\\.spec)\\.(ts|tsx)$",
  "moduleFileExtensions": ["ts", "js", "json"],
  "moduleNameMapper": {
    "^@lib(.*)$": "<rootDir>/src/lib$1",
    "^@components(.*)$": "<rootDir>/src/components$1"
  },
  "rootDir": "./"
}
